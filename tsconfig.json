{
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "ES2022",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "src/__tests__"],
  "exclude": ["node_modules"]
}
